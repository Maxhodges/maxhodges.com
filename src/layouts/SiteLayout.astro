---
import "../styles/global.css";

const {
  title,
  breadcrumb = "Home / Galleries",
  breadcrumbItems,
} = Astro.props;
const homeLabel = "Home";
const homePrefix = `${homeLabel} / `;
const breadcrumbSuffix = breadcrumb.startsWith(homePrefix)
  ? breadcrumb.slice(homePrefix.length)
  : "";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content="High-performance photography portfolio."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <style>
      body::before {
        content: "";
        position: fixed;
        inset: 0;
        background:
          radial-gradient(
            circle at 75% 8%,
            rgba(208, 122, 75, 0.18),
            transparent 60%
          ),
          radial-gradient(
            circle at 12% 85%,
            rgba(108, 143, 184, 0.18),
            transparent 55%
          );
        z-index: -1;
      }
    </style>
  </head>
  <body class="antialiased">
    <div class="min-h-screen px-4 pb-10 pt-4 sm:px-10 lg:px-16">
      <header class="flex flex-wrap items-start justify-between gap-4 pb-6">
        <div class="font-mono text-xs uppercase tracking-[0.3em] text-[color:var(--sea)]">
          <a href="/">{homeLabel}</a>
          {
            breadcrumbItems?.length
              ? breadcrumbItems.map((item) => (
                  <>
                    {" / "}
                    {item.href ? <a href={item.href}>{item.label}</a> : item.label}
                  </>
                ))
              : breadcrumbSuffix
                ? ` / ${breadcrumbSuffix}`
                : breadcrumb !== homeLabel
                  ? ` / ${breadcrumb}`
                  : ""
          }
        </div>
        <div class="flex items-center gap-3 text-right">
          <div class="font-[var(--font-display)] text-2xl font-semibold tracking-tight">
            Max Hodges
          </div>
          <a
            href="/blog"
            class="text-xs uppercase tracking-[0.3em] text-[color:var(--sea)] transition hover:text-[color:var(--rust)]"
          >
            Blog
          </a>
        </div>
      </header>

      <main>
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
  .font-mono {
    font-family: "Space Grotesk", "Arial", sans-serif;
  }
</style>
