---
import "../styles/global.css";

const { title, breadcrumb = "Home / Galleries" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content="High-performance photography portfolio." />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <style>
      body::before {
        content: "";
        position: fixed;
        inset: 0;
        background:
          radial-gradient(circle at 80% 5%, rgba(180, 79, 44, 0.18), transparent 55%),
          radial-gradient(circle at 10% 90%, rgba(47, 79, 123, 0.2), transparent 50%);
        z-index: -1;
      }
    </style>
  </head>
  <body class="antialiased">
    <div class="min-h-screen px-6 pb-16 pt-10 sm:px-10 lg:px-16">
      <header class="mb-12 flex flex-wrap items-start justify-between gap-4">
        <div class="font-mono text-xs uppercase tracking-[0.3em] text-[color:var(--sea)]">
          {breadcrumb}
        </div>
        <div class="text-right font-[var(--font-display)] text-2xl font-semibold tracking-tight">
          Max Hodges
        </div>
      </header>

      <main>
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
  .font-mono {
    font-family: "Space Grotesk", "Arial", sans-serif;
  }
</style>
